<div class="container">
  <center>
    <div class="Row">
      <div class="center col-md-12">
        <img src="/assets/img/burgericon.png" alt="Burger icon">
        <h1>Eat-da-Burger</h1>
      </div>
    </div>
  </center>
  <div class="row">
      <div class="col-md-6" id="Eat">
        <br>
        <h2>Burgers for you to eat</h2>
        <ul>
          {{#each burgers}} {{#unless devoured}}
          <p>
            <h3>{{burgerName}}
              <button class="devoured" data-id="{{id}}">Devour</button>
          </p>
          </h3>
          {{/unless}} {{/each}}
        </ul>
      </div>

      <div class="col-md-6" id="Eaten">
        <br>
        <h2>Burgers eaten</h2>
        <ul>
          {{#each burgers}} {{#if devoured}}
          <h3>{{burgerName}}</h3>
          {{/if}} {{/each}}
        </ul>
      </div>
  </div>


  <h2>Add Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>
    <div class="form-group"></div>
    <button id="addburger " type="submit">Add Burger</button>
  </form>
</div>
</div>
</div>